{
    "Logging": {
        "Serilog": {
            "PathFormat": "Logs/log-{Date}.txt",
            "LogLevel": {
                "Default": "Debug",
                "Microsoft": "Information"
            }
        },
        "IncludeScopes": false,
        "Debug": {
            "LogLevel": {
                "Default": "Warning"
            }
        },
        "Console": {
            "LogLevel": {
                "Default": "Warning"
            }
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=FraudDetection.db"
    },
    "RulesSettings": {
        "SameIdentificationNumber": {
            "Enabled": true,
            "Priority": 10,
            "MatchPercentage": 100
        },
        "SameLastName": {
            "Enabled": true,
            "Priority": 1,
            "MatchPercentage": 40
        },
        "SameFirstName": {
            "Enabled": true,
            "Priority": 1,
            "MatchPercentage": 20
        },
        "SimilarFirstName": {
            "Enabled": true,
            "Priority": 1,
            "MatchPercentage": 15
        },
        "SameDateOfBirth": {
            "Enabled": true,
            "Priority": 1,
            "MatchPercentage": 40
        }
    }
}
